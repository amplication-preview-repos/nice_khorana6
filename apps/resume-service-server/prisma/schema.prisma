datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ResumeSection {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String?
  content   String?
  order     Int?
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model DashboardSettings {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  theme     String?
  layout    Json?
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  id                     String              @id @default(cuid())
  createdAt              DateTime            @default(now())
  updatedAt              DateTime            @updatedAt
  firstName              String?
  lastName               String?
  username               String              @unique
  email                  String?             @unique
  password               String
  roles                  Json
  resumeSections         ResumeSection[]
  dashboardSettingsItems DashboardSettings[]
}
